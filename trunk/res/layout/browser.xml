<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/browserLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="0px" android:background="#ff000000"
	android:scrollbars="none">
	<at.pardus.android.browser.PardusWebView
		android:id="@+id/browser" android:layout_width="fill_parent"
		android:layout_height="0dp" android:layout_weight="1" android:padding="0px"
		android:background="#ff000000" android:scrollbarStyle="outsideOverlay"
		android:scrollbarAlwaysDrawHorizontalTrack="false"
		android:scrollbarAlwaysDrawVerticalTrack="false" />
	<ProgressBar android:id="@+id/progress"
		android:layout_width="fill_parent" android:layout_height="4dp"
		style="?android:attr/progressBarStyleHorizontal" android:padding="0px"
		android:background="#ff000000" android:scrollbars="none"
		android:visibility="gone" />
</LinearLayout>
